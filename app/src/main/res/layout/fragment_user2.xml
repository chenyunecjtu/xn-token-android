<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:showIn="@layout/fragment_user2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:background="@drawable/user_bg" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/status_bar_height"
            android:gravity="center"
            android:paddingTop="15dp"
            android:text="@string/main_tab_my"
            android:textColor="@color/white"
            android:textSize="18sp" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="85dp"
            android:layout_weight="1"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginBottom="5dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/user_fragment_card_cornerradius"
                    app:cardElevation="@dimen/user_fragment_card_elevation"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_crown"
                                android:layout_width="22dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/crown"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/img_logo"
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:layout_gravity="bottom"
                                android:src="@drawable/user_logo" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linLayout_nick_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_marginTop="8dp"
                                android:id="@+id/tv_nick_name"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@color/text_black_cd"
                                android:textSize="16sp"
                                tools:text="哈哈哈" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/phone" />

                                <TextView
                                    android:id="@+id/tv_phone_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="&#12288;&#12288;&#12288;&#12288;&#12288;"
                                    android:textColor="@color/gray_666666"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_credit_amount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:padding="10dp"
                                    android:text="@string/credit_score"
                                    android:textColor="@color/gray_666666"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="0"
                                    android:textColor="#007AFF"
                                    android:textSize="12sp" />

                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>


                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/user_fragment_card_cornerradius"
                    app:cardElevation="@dimen/user_fragment_card_elevation"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:id="@+id/linLayout_user_account"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/user_fragment_item_img_width"
                            android:layout_height="@dimen/user_fragment_item_img_height"
                            android:layout_marginLeft="15dp"
                            android:src="@drawable/lock" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1"
                            android:text="@string/accounts_and_security"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:background="@mipmap/more" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/user_fragment_card_cornerradius"
                    app:cardElevation="@dimen/user_fragment_card_elevation"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:id="@+id/linLayout_iden"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/user_fragment_item_img_width"
                            android:layout_height="@dimen/user_fragment_item_img_height"
                            android:layout_marginLeft="15dp"
                            android:src="@drawable/lock" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1"
                            android:text="认证"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:background="@mipmap/more" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/user_fragment_card_cornerradius"
                    app:cardElevation="@dimen/user_fragment_card_elevation"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:id="@+id/linLayout_invite"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/user_fragment_item_img_width"
                                android:layout_height="@dimen/user_fragment_item_img_height"
                                android:layout_marginLeft="15dp"
                                android:src="@drawable/friend" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="1"
                                android:text="@string/invite_gift"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:background="@mipmap/more" />

                        </LinearLayout>

                        <View
                            style="@style/style_split_line"
                            android:layout_marginLeft="48dp" />

                        <LinearLayout
                            android:id="@+id/linLayout_income"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/user_fragment_item_img_width"
                                android:layout_height="@dimen/user_fragment_item_img_height"
                                android:layout_marginLeft="15dp"
                                android:src="@drawable/income" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="1"
                                android:text="@string/my_income"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:background="@mipmap/more" />

                        </LinearLayout>

                        <View
                            style="@style/style_split_line"
                            android:layout_marginLeft="48dp" />

                        <LinearLayout
                            android:id="@+id/linLayout_feedback"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical">

                            <!--   <ImageView
                                   android:layout_width="@dimen/user_fragment_item_img_width"
                                   android:layout_height="@dimen/user_fragment_item_img_height"
                                   android:layout_marginLeft="15dp"
                                   android:src="@drawable/user_item_3" />-->
                            <ImageView
                                android:layout_width="@dimen/user_fragment_item_img_width"
                                android:layout_height="@dimen/user_fragment_item_img_height"
                                android:layout_marginLeft="15dp"
                                android:src="@drawable/question_feedback" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="1"
                                android:text="@string/question_feedback"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:background="@mipmap/more" />

                        </LinearLayout>

                    </LinearLayout>


                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/user_fragment_card_cornerradius"
                    app:cardElevation="@dimen/user_fragment_card_elevation"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:id="@+id/join_us"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/user_fragment_item_img_width"
                                android:layout_height="@dimen/user_fragment_item_img_height"
                                android:layout_marginLeft="15dp"
                                android:src="@drawable/user_item_4" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="1"
                                android:text="@string/user_join"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:background="@mipmap/more" />

                        </LinearLayout>

                        <View
                            style="@style/style_split_line"
                            android:layout_marginLeft="48dp" />

                        <LinearLayout
                            android:id="@+id/wallet_tool"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/user_fragment_item_img_width"
                                android:layout_height="@dimen/user_fragment_item_img_height"
                                android:layout_marginLeft="15dp"
                                android:src="@drawable/user_item_5" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="1"
                                android:text="@string/wallet_tool"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:background="@mipmap/more" />

                        </LinearLayout>


                        <View
                            style="@style/style_split_line"
                            android:layout_marginLeft="48dp" />

                        <LinearLayout
                            android:id="@+id/helper"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/user_fragment_item_img_width"
                                android:layout_height="@dimen/user_fragment_item_img_height"
                                android:layout_marginLeft="16dp"
                                android:src="@drawable/help_center" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="1"
                                android:text="@string/user_issue"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:background="@mipmap/more" />

                        </LinearLayout>

                        <View
                            style="@style/style_split_line"
                            android:layout_marginLeft="48dp" />

                        <LinearLayout
                            android:id="@+id/setting"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/user_fragment_item_img_width"
                                android:layout_height="@dimen/user_fragment_item_img_height"
                                android:layout_marginLeft="15dp"
                                android:src="@drawable/setting" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="1"
                                android:text="@string/setting"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:background="@mipmap/more" />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

</layout>
