<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_marginLeft="12dp"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:cardCornerRadius="7dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/iv_icon"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/gray_ebebeb" />

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_name"
                        tools:text="游戏名称"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_company"
                        android:layout_marginTop="10dp"
                        tools:text="游戏名称"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_label1"
                            android:gravity="center"
                            tools:text="博彩类"
                            android:visibility="gone"
                            android:textSize="12sp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:background="@drawable/bg_label_dapp_yellow"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp" />

                        <TextView
                            android:id="@+id/tv_label2"
                            android:layout_marginLeft="4dp"
                            android:gravity="center"
                            tools:text="养成类"
                            android:visibility="gone"
                            android:textSize="12sp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:background="@drawable/bg_label_dapp_orange"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp" />

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_start"
                    android:layout_marginRight="25dp"
                    android:text="@string/dapp_start"
                    android:textSize="14sp"
                    android:textColor="@color/blue"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:background="@drawable/btn_blue_bg_line"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="26dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/dapp_grade"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/gray_d6d5d5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iv_star1"
                                android:background="@mipmap/dapp_stars_gray"
                                android:layout_width="12dp"
                                android:layout_height="12dp" />

                            <ImageView
                                android:id="@+id/iv_star2"
                                android:background="@mipmap/dapp_stars_gray"
                                android:layout_marginLeft="1dp"
                                android:layout_width="12dp"
                                android:layout_height="12dp" />

                            <ImageView
                                android:id="@+id/iv_star3"
                                android:background="@mipmap/dapp_stars_gray"
                                android:layout_marginLeft="1dp"
                                android:layout_width="12dp"
                                android:layout_height="12dp" />

                            <ImageView
                                android:id="@+id/iv_star4"
                                android:background="@mipmap/dapp_stars_gray"
                                android:layout_marginLeft="1dp"
                                android:layout_width="12dp"
                                android:layout_height="12dp" />

                            <ImageView
                                android:id="@+id/iv_star5"
                                android:background="@mipmap/dapp_stars_gray"
                                android:layout_marginLeft="1dp"
                                android:layout_width="12dp"
                                android:layout_height="12dp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_stars"
                            android:text="(0)"
                            android:textSize="14sp"
                            android:layout_marginLeft="4dp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/dapp_download"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/gray_d6d5d5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_downloadNum"
                        android:text="0"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/dapp_vol"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/gray_d6d5d5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_vol"
                        android:text="0"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:background="@color/gray_d6d5d5"
                android:layout_marginTop="11dp"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <LinearLayout
                android:gravity=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_intro"
                    android:text="@string/dapp_intro"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/selector_blue"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="17dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="30dp" />

                <Button
                    android:id="@+id/btn_guide"
                    android:text="@string/dapp_guide"
                    android:textSize="14sp"
                    android:textColor="@color/gray_acacac"
                    android:background="@drawable/btn_gray_bg_line"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="17dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="30dp" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_guide"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.scwang.smartrefresh.layout.SmartRefreshLayout
                        android:id="@+id/refreshLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/gray_bg"
                        app:srlAccentColor="@android:color/tertiary_text_dark"
                        app:srlEnablePreviewInEditMode="true"
                        app:srlPrimaryColor="@color/gray_bg">
                        <!--srlAccentColor srlPrimaryColor 将会改变 Header 和 Footer 的主题颜色-->
                        <!--srlEnablePreviewInEditMode 可以开启和关闭预览功能-->
                        <com.cdkj.baselibrary.views.refresh.ClassicsHeader2
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv"
                            android:background="#f8f8f8"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:overScrollMode="never" />

                        <com.cdkj.baselibrary.views.refresh.ClassicsFooter2
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_intro"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.cdkj.token.views.ExpandTextView
                        android:id="@+id/etv_intro"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <View
                        style="@style/style_split_line"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_height="2dp" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_info"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="230dp">

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>


            </FrameLayout>

        </LinearLayout>

    </ScrollView>
    
</layout>