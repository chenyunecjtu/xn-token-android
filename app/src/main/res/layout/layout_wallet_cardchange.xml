<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.cdkj.token.views.CardChangeLayout
        android:id="@+id/cardChangeLayout"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="138dp"
        tools:showIn="@layout/fragment_wallet_2">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="138dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/wallet_orange_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_my_private_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="45dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    tools:text="@string/my_wallet" />

                <ImageView
                    android:id="@+id/img_my_private_wallet_info"
                    android:visibility="invisible"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="46dp"
                    android:layout_toRightOf="@id/tv_my_private_wallet"
                    android:src="@drawable/question" />

                <TextView
                    android:id="@+id/tv_pri_wallet_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_my_private_wallet_info"
                    android:layout_toRightOf="@+id/tv_private_wallet_symbol"
                    android:layout_marginLeft="6dp"
                    android:text="0.00"
                    android:textColor="@color/white"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/tv_private_wallet_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_my_private_wallet_info"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="45dp"
                    android:textSize="26sp"
                    android:textColor="@color/white"
                    tools:text="@string/money_sing" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="138dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/wallet_blue_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_my_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:layout_marginTop="45dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    tools:text="@string/my_wallet" />


                <ImageView
                    android:id="@+id/img_my_wallet_info"
                    android:visibility="invisible"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="46dp"
                    android:layout_toRightOf="@id/tv_my_wallet"
                    android:src="@drawable/question" />

                <TextView
                    android:id="@+id/tv_wallet_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_my_wallet_info"
                    android:layout_toRightOf="@+id/tv_wallet_symbol"
                    android:layout_marginLeft="2dp"
                    android:text="0.00"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/tv_wallet_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_my_wallet_info"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="45dp"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    tools:text="@string/money_sing" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </com.cdkj.token.views.CardChangeLayout>
</layout>